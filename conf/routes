# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Blog
GET     /blog                       controllers.Blog.index
GET     /blog/:slug                 controllers.Blog.show(slug: String)
GET     /rss                       controllers.Blog.rss

# Projects
GET     /projects                   controllers.Projects.index
GET     /citeplasm                  controllers.Projects.citeplasm
GET     /bigpicturesupport          controllers.Projects.bps
GET     /semantic-web               controllers.Projects.semanticweb

# About
GET     /about                      controllers.Application.about

# Contact
GET     /contact                    controllers.Application.contact

# Legal
GET     /legal                      controllers.Application.legal

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
